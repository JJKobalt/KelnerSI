                <CheckBox fx:id="onion" mnemonicParsing="false" text="Cebula" />
                <CheckBox fx:id="kebab" mnemonicParsing="false" text="Kebab" />
                <CheckBox fx:id="sausage" mnemonicParsing="false" text="Kiełbasa" />
